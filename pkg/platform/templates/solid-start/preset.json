{
  "steps": [
    {
      "type": "copy"
    },
    {
      "type": "patch",
      "properties": {
        "file": "package.json",
        "patch": [
          {
            "op": "add",
            "path": "/overrides/nitropack",
            "value": "npm:nitropack-nightly"
          }
        ],
        "regex": [
          {
            "find": "\"dev\":\\s*\"([^\"]+)\"",
            "replace": "\"dev\": \"sst dev $1\""
          }
        ]
      }
    },
    {
      "type": "npm",
      "properties": {
        "file": "package.json",
        "package": "sst",
        "version": "ion"
      }
    }
  ]
}
